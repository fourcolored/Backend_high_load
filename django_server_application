upstream server_django {
    ip_hash;
    server 0.0.0.0:8001 max_fails=3 fail_timeout=20;
    server 0.0.0.0:8002 max_fails=3 fail_timeout=20;
}

server {
    listen 80;

    location / {
        proxy_pass http://server_django;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

    location /static/ {
        alias /app/static/;
    }
}